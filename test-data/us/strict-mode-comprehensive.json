{
  "description": "Comprehensive strict mode test cases for postal code normalization and validation",
  "postalCodeNormalization": [
    {
      "description": "should normalize Canadian postal codes to XXX XXX format",
      "testCases": [
        {
          "description": "Canadian postal code without space",
          "input": "123 Main St, Toronto ON M5V1A1",
          "expected": {
            "zip": "M5V 1A1",
            "zipValid": true
          }
        },
        {
          "description": "Canadian postal code with hyphen",
          "input": "123 Main St, Toronto ON M5V-1A1", 
          "expected": {
            "zip": "M5V 1A1",
            "zipValid": true
          }
        },
        {
          "description": "Canadian postal code with space (already normalized)",
          "input": "123 Main St, Toronto ON M5V 1A1",
          "expected": {
            "zip": "M5V 1A1",
            "zipValid": true
          }
        }
      ]
    }
  ],
  "zipPlusFourSpacing": [
    {
      "description": "should handle flexible ZIP+4 spacing",
      "testCases": [
        {
          "description": "ZIP+4 with hyphen",
          "input": "123 Main St, New York NY 12345-6789",
          "expected": {
            "zip": "12345",
            "plus4": "6789",
            "zipValid": true
          }
        },
        {
          "description": "ZIP+4 with space",
          "input": "123 Main St, New York NY 12345 6789",
          "expected": {
            "zip": "12345",
            "plus4": "6789", 
            "zipValid": true
          }
        },
        {
          "description": "ZIP+4 without separator",
          "input": "123 Main St, New York NY 123456789",
          "expected": {
            "zip": "12345",
            "plus4": "6789",
            "zipValid": true
          }
        }
      ]
    }
  ],
  "defaultBehavior": [
    {
      "description": "should default to permissive mode when strict is not specified",
      "input": "123 Main St, New York NY 12345",
      "expected": {
        "zip": "12345",
        "zipValid": true
      }
    },
    {
      "description": "should include zipValid field in permissive mode",
      "input": "123 Main St, New York NY 12345",
      "expected": {
        "zipValid": true
      }
    }
  ]
}