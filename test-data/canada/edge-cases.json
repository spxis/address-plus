{
  "$schema": "../schemas/test-file.json",
  "name": "Canadian Edge Cases",
  "description": "Edge case tests for Canadian address parsing including complex scenarios and boundary conditions",
  "tests": {
    "edgeCases": [
      {
        "input": "C.P. 5678, Succursale A, Ville-Marie, QC H3B 1X9",
        "expected": {
          "secUnitType": "CP",
          "secUnitNum": "5678",
          "city": "Ville-Marie",
          "state": "QC",
          "zip": "H3B 1X9",
          "country": "CA"
        },
        "description": "French PO Box (Casier Postal) with branch"
      },
      {
        "input": "321 Trans-Canada Highway, Km 125, Kamloops, BC V2C 5N1",
        "expected": {
          "number": "321",
          "street": "Trans-Canada",
          "type": "Hwy",
          "city": "Kamloops",
          "state": "BC",
          "zip": "V2C 5N1",
          "country": "CA"
        },
        "description": "Highway with kilometer marker"
      },
      {
        "input": "100 Route Transcanadienne, Mile 42, Calgary, AB T3E 7H4",
        "expected": {
          "number": "100",
          "street": "Transcanadienne",
          "type": "Rte",
          "city": "Calgary",
          "state": "AB",
          "zip": "T3E 7H4",
          "country": "CA"
        },
        "description": "French Trans-Canada route with mile marker"
      },
      {
        "input": "General Delivery, Inuvik, NT X0E 0T0",
        "expected": {
          "generalDelivery": true,
          "city": "Inuvik",
          "state": "NT",
          "zip": "X0E 0T0",
          "country": "CA"
        },
        "description": "General delivery in northern territory"
      },
      {
        "input": "P.O. Box 9999, Station Main, Halifax, NS B3J 3A7",
        "expected": {
          "secUnitType": "PO Box",
          "secUnitNum": "9999",
          "city": "Halifax",
          "state": "NS",
          "zip": "B3J 3A7",
          "country": "CA"
        },
        "description": "PO Box with station designation"
      },
      {
        "input": "888 Confederation Trail, Point 15, Summerside, PE C1N 4J6",
        "expected": {
          "number": "888",
          "street": "Confederation",
          "type": "Trl",
          "city": "Summerside",
          "state": "PE",
          "zip": "C1N 4J6",
          "country": "CA"
        },
        "description": "Trail with point designation"
      },
      {
        "input": "159 Duckworth Street, Level 3, St. John's, NL A1C 1G4",
        "expected": {
          "number": "159",
          "street": "Duckworth",
          "type": "St",
          "secUnitType": "Level",
          "secUnitNum": "3",
          "city": "St. John's",
          "state": "NL",
          "zip": "A1C 1G4",
          "country": "CA"
        },
        "description": "Historic street with level designation"
      }
    ]
  }
}
