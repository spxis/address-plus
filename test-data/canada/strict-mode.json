{
  "$schema": "../../schemas/test-file.json",
  "name": "Canadian Strict Mode Tests",
  "description": "Canadian address parsing tests with strict validation mode enabled",
  "tests": {
    "strictMode": [
      {
        "description": "Valid Canadian postal code with space",
        "input": "123 Main St, Toronto ON M5V 1A1",
        "expected": {
          "zip": "M5V 1A1",
          "zipValid": true
        }
      },
      {
        "description": "Valid Canadian postal code without space",
        "input": "123 Main St, Toronto ON M5V1A1",
        "expected": {
          "zip": "M5V 1A1",
          "zipValid": true
        }
      },
      {
        "description": "Valid Canadian postal code with dash (normalizes to space)",
        "input": "123 Main St, Toronto ON M5V-1A1",
        "expected": {
          "zip": "M5V 1A1",
          "zipValid": true
        }
      },
      {
        "description": "Valid Canadian postal code without space - Montreal",
        "input": "123 Main St, Montreal QC H3C1G1",
        "expected": {
          "zip": "H3C 1G1",
          "zipValid": true
        }
      },
      {
        "description": "Invalid Canadian postal - wrong pattern - strict rejects",
        "input": "123 Main St, Toronto ON ABC123",
        "expected": {
          "strict": {
            "zip": null,
            "zipValid": false
          }
        }
      },
      {
        "description": "Invalid Canadian postal - too short - strict rejects",
        "input": "123 Main St, Toronto ON XYZ",
        "expected": {
          "strict": {
            "zip": null,
            "zipValid": false
          }
        }
      },
      {
        "description": "Invalid Canadian postal - wrong format with hyphen",
        "input": "123 Main St, Toronto ON M5V-1A1",
        "expected": {
          "zip": "M5V 1A1",
          "zipValid": true
        }
      }
    ]
  }
}