{
  "name": "address-plus",
  "version": "1.0.0",
  "description": "A modern, TypeScript‑first address parser and normalizer for US and Canada. Supports USPS and Canada Post formats, bilingual abbreviations, ZIP and postal codes, facility name detection, and parenthetical parsing. Lightweight, regex‑driven, and API‑compatible with parse-address for seamless upgrades.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev": "tsc --watch",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "address",
    "parser",
    "typescript",
    "us",
    "canada",
    "usps",
    "canada-post",
    "postal-code",
    "zip-code",
    "bilingual",
    "parse-address"
  ],
  "author": "John",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/spxis/address-plus.git"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.0",
    "jest": "^30.1.3",
    "parse-address": "^1.1.2",
    "ts-jest": "^29.4.2",
    "typescript": "^5.9.2"
  }
}
